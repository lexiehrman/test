<footer class="footer" role="contentinfo">
  <section class="footer__upper" style="background-image:url( {{ 'img_footer_bg.jpg' | asset_url }} ); background-position: {{ settings.footer_bg_pin }}">
    <div class="footer__newsletter">
      <h3 class="footer__newsletter__headline">{{ settings.footer_newsletter_title }}</h3>
      <form action="{{ settings.mailing_list_form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" class="footer__newsletter__form">
        <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="ENTER YOUR EMAIL" name="EMAIL" id="mail" class="footer__newsletter__field" aria-label="Email Address" autocorrect="off" autocapitalize="off">
        <input type="submit" class="footer__newsletter__submit" value="GO" name="subscribe" id="subscribe">
      </form>
    </div>
